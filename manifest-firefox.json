{
    "manifest_version": 2,
    "name": "Secure password generator",
    "author": "Gwarek2",
    "version": "0.5",
    "description": "Simple password generator.\n",
    "applications": {
        "gecko": {
            "id": "addon@password-generator.org"
        }
    },
    "browser_action": {
        "default_title": "Password generator",
        "default_popup": "src/popup.html",
        "default_icon": {
            "16": "src/images/icons/icon16.png",
            "32": "src/images/icons/icon32.png",
            "48": "src/images/icons/icon48.png",
            "128": "src/images/icons/icon128.png"
        }
    },
    "icons": {
        "16": "src/images/icons/icon16.png",
        "32": "src/images/icons/icon32.png",
        "48": "src/images/icons/icon48.png",
        "128": "src/images/icons/icon128.png"
    },
    "permissions": [
        "*://password-generator-api.herokuapp.com/*",
        "webRequest",
        "storage"
    ]
}
